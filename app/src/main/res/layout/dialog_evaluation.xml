<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#4169E1"
                android:gravity="center"
                android:padding="1dp"
                android:text=" 머리"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="● 주증상"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#000000"></LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">

            <Button
                android:id="@+id/head_btn1"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/btn_select"
                android:text="열이 납니다."
                android:textColor="@drawable/white" />

            <Button
                android:id="@+id/head_btn2"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:background="@drawable/btn_select"
                android:text="어지러움증이 있습니다."
                android:textColor="@drawable/white" />

            <Button
                android:id="@+id/head_btn3"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_select"
                android:layout_margin="3dp"
                android:text="두통이 있습니다."
                android:textColor="@drawable/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="● 통증"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/level_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="10"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>

        <SeekBar
            android:id="@+id/level_seek"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"></LinearLayout>

        <Button
            android:id="@+id/level_hospital"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#4169E1"
            android:text="병원 찾기"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/level_more"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#4169E1"
            android:text="더 알아보기"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/level_cancle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#4169E1"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="15sp"

            android:textStyle="bold" />
    </LinearLayout>
